#include<bits/stdc++.h>
using namespace std;

int main(){
    int t;
    cin>>t;
    int n;
    string s;
    int count;
    while(t>0){
        count=0;
        cin>>n;
        cin>>s;    
        for(int i=1;i<n;i++){
            if(!(s[i-1]=='a'||s[i-1]=='e'||s[i-1]=='i'||s[i-1]=='o'||s[i-1]=='u') && (s[i]=='a'||s[i]=='e'||s[i]=='i'||s[i]=='o'||s[i]=='u')){
                count++;
            }
        }
        cout<<count<<"\n";
        t--;
    }

}
